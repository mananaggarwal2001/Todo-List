<!DOCTYPE html>

<%-include('header')-%>
    <div class="box" id="heading">
        <h1>
            <%= listTitle %>
        </h1>
    </div>


    <div class="box">

        <% for(var i=0; i<  newListItems.length; i++){ %>
            <form action="/deleteItem" method="post">
                <div class="item">
                    <input type="checkbox" name="checkedItem" value="<%= newListItems[i]._id %>" onChange="this.form.submit()">
                    <p>
                        <%= newListItems[i].name %>
                    </p>
                </div>
                <input type="hidden" name="listName" value="<%=listTitle %>">
            </form>
            <%}%>

                <form class="item" action="/" method="post" enctype="application/x-www-form-urlencoded">
                    <input type="text" name="todoListName" placeholder="New Item" autocomplete="off">
                    <button type="submit" name="list" value=<%=listTitle %>>+</button>
                </form>
    </div>

    <%-include('footer')-%>